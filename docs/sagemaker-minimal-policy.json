{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SageMakerModelManagement",
            "Effect": "Allow",
            "Action": [
                "sagemaker:CreateModel",
                "sagemaker:CreateEndpointConfig", 
                "sagemaker:CreateEndpoint",
                "sagemaker:DescribeModel",
                "sagemaker:DescribeEndpointConfig",
                "sagemaker:DescribeEndpoint",
                "sagemaker:ListEndpoints",
                "sagemaker:ListModels",
                "sagemaker:InvokeEndpoint",
                "sagemaker:UpdateEndpoint",
                "sagemaker:DeleteEndpoint",
                "sagemaker:DeleteEndpointConfig",
                "sagemaker:DeleteModel"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAMPassRoleForSageMaker",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": "arn:aws:iam::407275151589:role/*SageMaker*"
        },
        {
            "Sid": "S3AccessForModels",
            "Effect": "Allow", 
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:CreateBucket"
            ],
            "Resource": [
                "arn:aws:s3:::riftrewind-*",
                "arn:aws:s3:::riftrewind-*/*",
                "arn:aws:s3:::sagemaker-*",
                "arn:aws:s3:::sagemaker-*/*"
            ]
        },
        {
            "Sid": "IAMRoleCreation",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "iam:GetRole",
                "iam:ListRoles"
            ],
            "Resource": [
                "arn:aws:iam::407275151589:role/RiftRewind-*",
                "arn:aws:iam::407275151589:role/service-role/RiftRewind-*"
            ]
        }
    ]
}