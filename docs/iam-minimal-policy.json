{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SageMakerRoleCreation",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "iam:GetRole",
                "iam:ListRoles",
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:iam::407275151589:role/RiftRewind-*",
                "arn:aws:iam::407275151589:role/service-role/RiftRewind-*"
            ]
        },
        {
            "Sid": "PolicyAttachment",
            "Effect": "Allow",
            "Action": [
                "iam:AttachRolePolicy"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "iam:PolicyArn": [
                        "arn:aws:iam::aws:policy/AmazonSageMakerFullAccess",
                        "arn:aws:iam::aws:policy/AmazonS3FullAccess"
                    ]
                }
            }
        }
    ]
}